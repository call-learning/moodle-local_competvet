<div class="observations-tab">
    {{#cases}}
        <div class="card">
            <div class="card-header" id="competvet-view-cases-cat-heading-{{id}}">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#competvet-view-cases-cat-{{category}}"
                            aria-expanded="true" aria-controls="competvet-view-cases-cat-{{id}}">
                        {{#userdate}} {{date}}, {{#str}} strftimedate, core_langconfig {{/str}} {{/userdate}}
                        {{animal}}
                    </button>
                </h2>
            </div>
            <div id="competvet-view-cases-cat-{{category}}" class="card-body">
                <div class="row">
                    <div class="col-6">
                        {{label}}
                    </div>
                </div>
            </div>
        </div>
    {{/cases}}
</div>