{{!
    @template local_competvet/view/student_mobile_evaluations


    Example context (json):
    {

    }
}}
<div class="competvet-view-evaluations">

    <div class="nav-container">
        <ul class="nav nav-tabs nav-fill mt-4" id="evaluations-tab" role="tablist">
            {{#tabs}}
                <li class="nav-item ml-3" role="presentation">
                    <button class="nav-link w-100 {{#isactive}}active{{/isactive}}" id="{{itemtype}}-tab" data-toggle="tab" data-target="#{{itemtype}}-tab-id" type="button" role="tab"
                            aria-controls="{{itemtype}}" aria-selected="true">
                        {{label}}
                    </button>
                </li>
            {{/tabs}}
        </ul>
    </div>

    <div class="tab-content" id="evaluations-tab-content">
        {{#tabs}}
            <div class="tab-pane fade w-100 show {{#isactive}}active{{/isactive}}" id="{{itemtype}}-tab-id" role="tabpanel" aria-labelledby="{{itemtype}}-tab">
                <div class="tab-inner">
                    {{#hasobservations}}
                        {{>  local_competvet/view/observations_tab }}
                    {{/hasobservations}}
                    {{#hascertifications}}
                        {{>  local_competvet/view/certifications_tab }}
                    {{/hascertifications}}
                    {{#hascases}}
                        {{>  local_competvet/view/cases_tab }}
                    {{/hascases}}
                </div>
            </div>
        {{/tabs}}
    </div>
</div>