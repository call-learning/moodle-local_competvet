{{!
    @template local_competvet/view/observations_tab


    Example context (json):
    {

    }
}}
<div class="observations-tab">
{{#observations}}
        <div class="card">
            <div class="card-header" id="competvet-view-observations-cat-heading-{{category}}">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#competvet-view-observations-cat-{{category}}"
                            aria-expanded="true" aria-controls="competvet-view-observations-cat-{{category}}">
                        {{categorytext}}
                    </button>
                </h2>
            </div>
            <div id="competvet-view-observations-cat-{{category}}" class="collapse show" aria-labelledby="competvet-view-observations-cat-heading-{{category}}"
                 data-parent="#competvet-view-observations-cat-heading-{{category}}">
                <div class="card-body">
                    {{#obslist}}
                        {{> mod_competvet/view/observation_card}}
                    {{/obslist}}
                </div>
            </div>
            {{#isstudent}}
                <div>
                    <button class="btn btn-outline-secondary my-3" data-cmid="{{cmid}}" data-planning-id="{{planningid}}" data-student-id="{{studentid}}"
                            data-action="observation-ask">{{#str}}observation:ask, mod_competvet{{/str}}</button>
                </div>
            {{/isstudent}}
            {{^isstudent}}
                <div>
                    <button class="btn btn-outline-secondary my-3" data-cmid="{{cmid}}" data-planning-id="{{planningid}}" data-student-id="{{studentid}}"
                            data-action="observation-add">{{#str}}observation:add, mod_competvet{{/str}}</button>
                </div>
            {{/isstudent}}
{{#js}}
require(['{{modulename}}/local/forms/eval_observation_ask'], function(Form) {
    Form.init('{{modulename}}');
});
require(['{{modulename}}/local/forms/eval_observation_add'], function(Form) {
    Form.init('{{modulename}}');
});
{{/js}}

        </div>
{{/observations}}

</div>